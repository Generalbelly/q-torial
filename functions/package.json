{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase functions:config:get > .runtimeconfig.json && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:prod": "firebase use production && firebase deploy --only functions",
    "deploy:dev": "firebase use staging && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "basic-auth-connect": "^1.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.1",
    "firebase-functions": "^3.0.2",
    "firebase-tools": "^7.0.2",
    "googleapis": "^41.0.1",
    "replace-in-file": "^5.0.2",
    "stripe": "^7.9.1"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
